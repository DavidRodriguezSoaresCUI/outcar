<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/mainActivity_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4" >

        <TextView
            android:id="@+id/text_SavedInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:paddingRight="12dp"
            android:paddingBottom="16dp"
            android:background="@android:drawable/edit_text"
            android:gravity="right"
            android:text="@string/do_not_display"
            android:textAlignment="gravity"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/ChooseLanguageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:text="@string/do_not_display"
            android:onClick="onChooseLanguageButtonClick"/>

        <Button
            android:id="@+id/RunGameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:text="@string/do_not_display"
            android:onClick="onRunGameButtonClick"/>

        <Button
            android:id="@+id/TutorialButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:text="@string/do_not_display"
            android:onClick="onTutorialButtonClick"/>

        <Button
            android:id="@+id/DelSaveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:text="@string/do_not_display"
            android:onClick="onDelSaveButtonClick"
            android:visibility="gone"/>

    </GridLayout>

</android.support.constraint.ConstraintLayout>