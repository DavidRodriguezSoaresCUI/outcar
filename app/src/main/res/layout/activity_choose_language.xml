<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseLanguage">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="@string/do_not_display"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/imageButton1_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/do_not_display"
        app:layout_constraintLeft_toLeftOf="@id/imageButton1"
        app:layout_constraintRight_toRightOf="@id/imageButton1"
        app:layout_constraintTop_toTopOf="@id/imageButton1"
        app:layout_constraintBottom_toBottomOf="@id/imageButton1" />

    <Button
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageButton1" />

    <TextView
        android:id="@+id/imageButton2_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/do_not_display"
        app:layout_constraintLeft_toLeftOf="@id/imageButton2"
        app:layout_constraintRight_toRightOf="@id/imageButton2"
        app:layout_constraintTop_toTopOf="@id/imageButton2"
        app:layout_constraintBottom_toBottomOf="@id/imageButton2" />

    <Button
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageButton2" />

    <TextView
        android:id="@+id/imageButton3_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/do_not_display"
        app:layout_constraintLeft_toLeftOf="@id/imageButton3"
        app:layout_constraintRight_toRightOf="@id/imageButton3"
        app:layout_constraintTop_toTopOf="@id/imageButton3"
        app:layout_constraintBottom_toBottomOf="@id/imageButton3" />

    <Button
        android:id="@+id/exitCL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/do_not_display"
        android:src="@drawable/button_blank_trans"
        app:layout_constraintTop_toBottomOf="@id/imageButton3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>